<%- include('./common/header'); %>

    <div class="card"
        style="word-wrap: break-word;background-color: #fff;text-align: left;border-radius: 5px;box-shadow: 0px 2px 6px #ced4da;border: 1px solid #d4e2ff;max-width: 650px;width: 100%;margin-left: auto;margin-right: auto;">
        <div class="card-header"
            style="padding: 5px 20px 0px 20px;text-align: center;background: #eef7ff;border-bottom: 2px solid #eef7ff;border-top-right-radius: 5px;border-top-left-radius: 5px;">
            <h1 style="font-weight: 500;line-height: 1.5;font-size: 26px;">Please verify your email address!</h1>
        </div>

        <div class="card-body" style="padding: 1.25rem;">
            <div>
                <h2 style="margin-bottom: .5rem;margin-top: 10px;font-weight: 500;line-height: 1.2;font-size: 22px;">
                    Hello {{Name}},</h2>
                
                <p style="margin-top: 0px;color: #6c757d;font-size: 14px;margin-bottom: 20px;line-height:1.6;"><a href="{{ConfirmEmailLink}}">Click this link to verify your email {{Email}}.</a></p>
            </div>

<%- include('./common/footer', {
    planDescription: false,
    templateFor: "customer"
}); %>

